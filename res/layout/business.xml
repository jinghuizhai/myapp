<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/business"
              android:layout_height="match_parent">
    <!--emplyee-->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:id="@+id/employee_wrap" android:gravity="center" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="80dp"
                      android:background="@drawable/circle_bg_lightblue"
                      android:layout_height="80dp"
                      android:gravity="center"
                      android:orientation="vertical">
            <TextView android:textColor="@color/blue"
                      android:textSize="20dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/employee"
                      android:gravity="center"
                      android:layout_width="wrap_content"
            />
            <TextView android:textColor="@color/gray"
                      android:textSize="10dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/phone"
                      android:gravity="center"
                      android:layout_width="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/container" android:layout_marginTop="10dp" android:layout_below="@id/employee_wrap">
        <!--register-->
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="vertical"
                      android:layout_marginBottom="10dp"
                      android:id="@+id/business_register"
                      android:background="@drawable/border_bottom"
                      android:visibility="invisible"
                      android:layout_height="80dp">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="10dp">
                <TextView android:layout_width="wrap_content"
                          android:text="工商注册"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="查看详细"
                          android:textColor="@color/light_gray"
                          android:layout_marginLeft="10dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--change-->
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="vertical"
                      android:padding="5dp"
                      android:background="@drawable/border_bottom"
                      android:visibility="invisible"
                      android:id="@+id/business_change"
                      android:layout_height="80dp">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="10dp">
                <TextView android:layout_width="wrap_content"
                          android:text="工商变更"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="查看详细"
                          android:textColor="@color/light_gray"
                          android:layout_marginLeft="10dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--logout-->
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="vertical"
                      android:padding="5dp"
                      android:background="@drawable/border_bottom"
                      android:id="@+id/business_logout"
                      android:visibility="invisible"
                      android:layout_height="80dp">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="10dp">
                <TextView android:layout_width="wrap_content"
                          android:text="工商注销"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="查看详细"
                          android:textColor="@color/light_gray"
                          android:layout_marginLeft="10dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:id="@+id/progressBar"
                  android:layout_marginTop="-50dp"
                  android:layout_alignParentTop="true"
                  android:gravity="center" android:layout_height="wrap_content">
        <LinearLayout android:layout_width= "40dp"
                      android:gravity="center"
                      android:layout_gravity="center_horizontal"
                      android:background="@drawable/white_circle"
                      android:layout_height="40dp">
            <com.example.myapp.CircularProgress android:layout_width="20dp"
                                                android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>